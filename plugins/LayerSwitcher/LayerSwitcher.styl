	// color #fff


.lswitch-panel .panel-default
	border none
	background-color #38454E

.lswitch-panel
	.list-group
		transition opacity 0.2s
		// visible hidden


/* Added to html and body temporarily to avoid scrollbars during transitions */
.lswitch-overflow-hidden
	overflow hidden !important	


.panel-with-toolbar
	padding-top 5em

.lswitch-btndialog
	font-size 1.4em
	vertical-align middle
	margin-right 0.2em
	

.lswitch-dialog
	.modal-body-container
		right 0
		bottom 0
		left 0
		top 0
		position absolute
		-webkit-overflow-scrolling touch
	  	overflow-y scroll



@media (max-width: 991px)
	.lswitch-btnhide.btn
		display none !important
		visibility hidden
		
	.lswitch-cat
		color #fff

	.lswitch-panel
		position absolute !important
		background-color mobPanelBg
		height 100%
		.panel-default > .panel-heading
			// box-shadow inset #000 -3px 0px 17px
			border none
			background none !important
			filter none
			color #fff
	
	.lswitch-catcont a
		border none !important

	// Zoom-in-effect when showing and hiding the panel
	// .lswitch-panel .panel
	// 	transition all 400ms
	// 	transform translate(-20%,0) scale(0.9)
	
	// .lswitch-panel.panel-visible .panel
	// 	transform translate(0,0) scale(1)
	
	.lswitch-panel a
		color #fff
		background none
	
	.lswitch-panel a.active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		// background none !important
		background #000 !important
		color #fff
		border none

	a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus
		background #000 !important
		color #fff
	
	.lswitch-panel a:hover
		background none !important

	.lswitch-panel .panel-default > .panel-heading
		background none
		filter none !important // for IE
		color #fff
		outline none
		font-weight bold
		font-size 1.2em
	

@keyframes slipout
	0%
		margin-left 0
	50%
		margin-left -100%
	100%
		margin-left 0

@media (min-width: 992px)
	/* For desktop computers */
	.lswitch-displaynone
		.list-group
			display none
		.panel:nth-child(2)
			display none
	
	.lswitch-panel.lswitch-hidden
		.panel-heading
			border-width 1px
		.panel-heading:nth-child(1)
			span
				animation-name slipout
				animation-duration 0.4s
				
		.list-group
			opacity 0
		.panel:nth-child(2)
			opacity 0

	.slipout-anim
		animation-name slipout
		animation-duration 0.6s

	a.list-group-item
		color #000

	a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus
		z-index 2
		// color white
		// background-color #428bca
		// border-color #428bca
		background-color #fff
		color #000
		font-weight bold
		border-color #ccc !important

	.lswitch-panel a.active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		background none
		filter none !important
		background-image none !important
		text-shadow none !important
		background-color #fff
		background-color rgba(255,255,255,0.9)
		color #000
		color rgba(0,0,0,1)
		// font-weight bold
	
	.lswitch-catcont.lswitch-catcont-visible a
		border 1px solid #ccc
		border-width 0 1px !important

	.lswitch-cat:hover
		background-color catHoverColor

	.lswitch-cat.open, .lswitch-cat.open:hover
		background none
		background-image none
		filter none
		background-color bgColorHeaderOpenHex
		background-color bgColorHeaderOpen
		color colorHeaderOpen

	.list-group-item.lswitch-cat.active, .list-group-item.lswitch-cat.active:focus, .list-group-item.lswitch-cat.active:hover, .list-group-item.lswitch-cat.open.active, .list-group-item.lswitch-cat.open.active:focus, .list-group-item.lswitch-cat.open.active:hover
		background none
		background-image none
		filter none !important
		background-color bgColorHeaderOpenHex

	.lswitch-cat
		background none
		background-image none
		color #000
		background-color #fff
		outline 1px solid #ccc
		letter-spacing -1px
	
	/* Avoid things appearing under the switcher */
	.leaflet-left
		left 325px
	
	.lswitch-catcont
		transition none //all .1s

	.lswitch-cat i
		transition transform .2s, color .1s
		font-size 1.0em
	.lswitch-cat i:hover
		color #00EDED
	
	#mapdiv
		margin-left 0px !important
	
	
	#lswitch-btn
		display none !important
	
	
	.lswitch-panel
		box-shadow none
		transition all 300ms
		
		display block !important
		background-color none
		filter none !important
		background-color rgba(255,255,255, 0)
		z-index 900

		max-height 100%

		// Note! One problem that comes with position:relative here is that 
		// if the layer panel is higher than the win height, scrollbars
		// won't appear, and the overflow:hidden of the parent container
		// is also not hiding the div.
		position relative
	

	.lswitch-panel a
		// background none
		// transition all 100ms
		border-color #fff
		background-color rgba(255,255,255, 0.9)
	
	.lswitch-panel a:hover, .lswitch-panel a:active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		background-color hoverColor

		// color #000
	
	.lswitch-panel .panel-default
		border none
		background none
		filter none !important
	
	#lswitch-olcont, #lswitch-blcont
		background-color none
		// border-radius 0 0 .4em .4em
		margin-top -1px
	
	#lswitch-olcont a:last-child, #lswitch-blcont a:last-child
		border-radius 0 0 .4em .4em
