	width 20px
	height 20px
	margin-right 0.2em

.lswitch-legend-big
	display block
	position absolute
	z-index 2000
	
	max-width 300px
	min-width 50px
	max-height 300px
	min-height 50px
	position absolute
	z-index 2000
	border 1px solid #aaa

.lswitch-cat, .lswitch-panel a
	cursor pointer
	background none //#38454E
	// color #eee
	border none
	// border-radius: 0 !important
	margin-top 1px
	letter-spacing -1px

.lswitch-cat
	margin-top 1px

.lswitch-cat.active
	font-weight bold
