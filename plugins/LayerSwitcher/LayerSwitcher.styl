
generalMargins = 5px
generalMarginsLeft = 10px
fontFamily = "OpenSans", "Droid Sans", "Verdana", "DejaVu Sans", "Bitstream Vera Sans", sans-serif

headerBg = rgba(255,255,255, 1)
headerColor = #000

catHoverColor = rgba(250,250,250,1)

hoverColor = rgba(245,245,245,.9)
bgColorHeaderOpen = rgba(255,255,255, 1)
bgColorHeaderOpenHex = #fff
colorHeaderOpen = #000

cpPanelBg = none
mobPanelBg = #38454e

indentDist = 1.3em
btnHoverOffset = 11px

#lswitch-btn
	font-size 2em //.7em
	z-index 1001
	position absolute
	left 0px
	bottom 80px
	padding 0.11em 0.3em 0.20em 0.28em
	border 1px solid #999
	border-width 1px 1px 1px 0
	// box-shadow 1px 1px 4px 0 rgba(100,100,100,.5)
	background-color #fff
	background-color rgba(255,255,255,.8)
	cursor pointer
	border-radius 0 0.4em 0.4em 0
	transition all 0.2s
	span
		// margin-left 1px
		transition transform 0.3s

#lswitch-btn:hover
	background-color rgba(240,240,240,0.8)
	// padding-left btnHoverOffset

#lswitch-btn.lswitch-btn-outslided
	margin-left -32px

.lsw-angle-turned
	transform rotate(180deg)

.lswitch-btnhide.btn
	display table-cell
	right 0
	vertical-align middle
	position relative
	top 0
	float right
	margin-top -0.4em
	outline 0
	i
		transition all 0.2s
		
.lswitch-btnhide.btn:focus
	outline 0
	
.rotate-90
	transform rotate(90deg)

// This class is temporarily added to the mapdiv during slide to avoid 
// changes in media query width when runnning the map in an iframe
.mapdiv-slidetransition
	transition all 0.3s ease !important

// .mapdiv-lsw-visible
// 	filter blur(4px)

.lswitch-panel .panel
	box-shadow none
	transition opacity 0.2s

.lswitch-panelslide
	transition margin-left 300ms ease

.lswitch-panel
	// box-shadow inset #000 -3px 0px 17px
	z-index -1
	position absolute
	left 0
	top 0
	width 70%
	background-color mobPanelBg
	height auto
	max-width 310px + generalMarginsLeft
	padding 0
	padding-left generalMarginsLeft
	padding-right 1px
	padding-top generalMargins
	overflow-y auto
	-ms-overflow-style -ms-autohiding-scrollbar !important /* Nasty bug fix Required for WP8 IE10!!! */
	font-size 0.9em
	.panel-heading
		border-radius 0
		border none
		border 1px solid #ccc
		border-width 1px 1px 0 1px
		// border-radius 3px 3px 0 0
		margin-left -1px
		margin-right -1px
		margin-bottom 2px
		background-color #fff
		padding 0.75em 1em
		font-size 1.1em
		letter-spacing 0px

// .lswitch-panel .panel-heading
// 	background-color headerBg
// 	color headerColor

.lswitch-cat
	text-shadow none !important
	background-image none !important
	text-shadow none
	background-image none
	white-space nowrap
	background none
	background-color #fff
	span
		margin-left .7em
		white-space nowrap
	

// .lswitch-cat i
// 	transition all .2s // only use transition effect for desktop due to rendering problem in Chrome e.g.




.lswitch-cat.open i
	transform rotate(90deg)

.lswitch-catcont
	height 0
	overflow hidden
	overflow-x visible
	// transition all .5s  // only use transition effect for desktop due to rendering problem in Chrome e.g.
	
	border none
	opacity 0
	border-color #fff
	border-color rgba(255,255,255, 0)
	a:first-child
		margin-top 2px

	// box-shadow rgba(0, 0, 0, 0.29) 1px 1px 2px inset


.lswitch-catcont.lswitch-catcont-visible
	// margin-left 10px
	height auto
	opacity 1
	background-color none //rgba(255,255,255,.3)
	overflow visible
	box-shadow rgba(0, 0, 0, 0.5) 0px 2px 6px inset

	.lswitch-cat
		padding-left 1em + indentDist
		// border-left 4px solid #666

	.lswitch-catcont
		.lswitch-cat
			padding-left indentDist*3
			// border-left 8px solid #aaa
			
		.lswitch-catcont.lswitch-catcont-visible a
			padding-left indentDist*4
	.lswitch-catcont a
		padding-left 2em + indentDist*1


// .lswitch-catcont.lswitch-catcont-visible
// 	width calc(100% + 1px)

.lswitch-catcont a
	border-radius 0 !important
	letter-spacing -1px
	white-space inherit

.lswitch-catcont.lswitch-catcont-visible a
	padding-left 2.5em
	transition padding-left 0.2s

