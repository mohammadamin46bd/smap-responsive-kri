
generalMargins = 5px
fontFamily = "OpenSans", "Droid Sans", "Verdana", "DejaVu Sans", "Bitstream Vera Sans", sans-serif

.smap-searchlund-div-in-toolbar
	top .2em !important
	z-index 1002 !important



#smap-searchlund-div .form-control, #smap-searchlund-div .input-group-addon
	border none

#smap-searchlund-div
	position relative
	left generalMargins
	top generalMargins
	z-index 1010
	width 79%
	max-width 380px
	transition left .3s, width 0.4s, max-width 0.4s
	overflow-y hidden
	border 1px solid #ccc
	.smap-searchlund-div-focused
		max-width 450px
	input
		letter-spacing -1px
		width 100%
		border-left none
		box-shadow none
		appearance none
		border-radius 0 !important
	// input:focus
	// 	border-color #ccc
	.dropdown-menu
		/* Autocomplete Typehead overrides */
		left 0px !important
	.input-group-addon
		background-color #fff !important
		padding-right 0 !important
		border-radius 0 !important


.dropdown-menu>li>a
	line-height 2.5

/* Typehead overrides END */


#smap-searchlund-bg
	background-color rgba(255,255,255,0)
	width 100%
	height 100%
	z-index 1000
	left 0px
	top 0px
	position absolute
	-webkit-transition background-color .3s
	transition background-color .3s

.searchlund-bg-visible
	background-color #fff !important
	background-color rgba(255,255,255,0.8) !important


.searchlund-active
	left 2% !important
	max-width 600px !important

.searchlund-active ul
	width 95% !important
	max-width 635px


@media (max-width: 767px)
	.smap-searchlund-div-in-toolbar
		max-width 80% !important
	.smap-searchlund-div-focused
		// max-width au
		width 83%
		max-width 83%
	
@media (max-width: 467px)
	.smap-searchlund-div-focused
		// max-width au
		width calc(100% - 10px) !important
		max-width calc(100% - 10px) !important



@media (min-width: 992px)
	#smap-searchlund-div
		left generalMargins + 325px
		

